{
  "name": "@zedix/zedix-ui",
  "version": "0.5.1",
  "description": "A library of essential web components (lit-based), serving as a foundation for web apps or design systems.",
  "author": "@zedix",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/zedix/zedix-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "vite build",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "lint": "eslint ./src && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint ./src . --fix && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "publish": "yarn npm publish",
    "test": "wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build --output-dir='.storybook/build'",
    "typecheck": "tsc --noEmit --project ./tsconfig.json"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.5.3",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@open-wc/prettier-config": "^1.1.0",
    "@open-wc/testing": "^3.2.0",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/addon-themes": "^7.5.1",
    "@storybook/blocks": "^7.5.1",
    "@storybook/web-components": "^7.5.1",
    "@storybook/web-components-vite": "^7.5.1",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@web/dev-server": "^0.3.6",
    "@web/dev-server-storybook": "^1.0.8",
    "@web/test-runner": "^0.17.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-lit": "^1.9.1",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-wc": "^2.0.4",
    "glob": "^10.3.10",
    "globals": "^13.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": "@open-wc/prettier-config",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.0.0",
  "customElements": "custom-elements.json"
}
