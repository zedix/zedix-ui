{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.Iterable", "es2020"],
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "~": ["./src"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.stories.js", "src/**/*.test.ts"]
}
